                    on_release: root.manager.current = "stats_screen"
                MDLabel:
                    text: "Subjects"
                    halign: "center"
                    font_style: "Caption"
                    theme_text_color: "Custom"
                    text_color: get_color_from_hex("#9E9E9E")
                    size_hint_y: None
                    height: self.texture_size[1]

            MDBoxLayout:
                orientation: "vertical"
                size_hint_x: 1
                spacing: dp(0)
                padding: [0, dp(4)]
